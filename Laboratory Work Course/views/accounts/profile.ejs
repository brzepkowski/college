<% layout('layout') -%>
<hr>
<div class="container">
 <div class="row">
  <div align="center">
   <h2><%= user.name %></h2>
   <p><strong>Email: </strong><%=user.email %></p>
   <p><strong>Field of study: </strong> <%=user.fieldOfStudy %> </p>
   <p><strong>Year of studies: </strong><%=user.yearOfStudies %> / <%=user.typeOfStudies %> </p>
   <p><strong>Country: </strong> <%=user.country %> </p>
